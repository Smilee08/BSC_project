<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staffform">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            layout="@layout/app_bar"/>
        <TextView
            android:layout_below="@+id/bar"
            android:id="@+id/namelab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"
            android:text="Name:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/name"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namelab"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="name"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/workid"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Work:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/work"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workid"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:hint="work"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="270dp"
            android:text="Department:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/department"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dep"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:hint="department"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/avali"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="430dp"
            android:text="Avalibility :"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/spinner43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="420dp"

            android:layout_marginEnd="55dp" />


        <Button
            android:id="@+id/perSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="490dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:text="submit" />


        <TextView
            android:id="@+id/cont"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="365dp"
            android:text="Contact no :"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/contactno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/custom1"
            android:hint="contact no"
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            tools:ignore="TouchTargetSizeCheck" />


    </RelativeLayout>
</ScrollView>