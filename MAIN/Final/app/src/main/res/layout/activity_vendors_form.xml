<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vendors_FormActivity">


        <include
            android:id="@+id/bar"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:text="Name : "
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:autofillHints=""
                android:background="@drawable/custom1"
                android:hint="vendor name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15sp"
                android:text="@string/type"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_Del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:autofillHints=""
                android:background="@drawable/custom1"
                android:hint="ex:vegetable seller"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15sp"
                android:text="@string/days"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rec_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:autofillHints=""
                android:background="@drawable/custom1"
                android:hint="@string/availability"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="@string/contact_no"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/contact_del"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:autofillHints=""
                android:background="@drawable/custom1"
                android:hint="vendor contact no"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/submit_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50sp"
                    android:layout_marginBottom="100dp"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="#ffff"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>