<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Permanentform"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/bar"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <TextView
            android:layout_below="@+id/bar"
            android:id="@+id/namelab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="70dp"
            android:text="Name:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/name"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namelab"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="name"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"
            android:autofillHints="" />

        <TextView
            android:id="@+id/winglab"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/wing"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_below="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="55dp" />


        <TextView
            android:id="@+id/vehnolab"
            android:layout_below="@+id/winglab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="Vehical No:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/vehicalno"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehnolab"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:hint="@string/vehical_no"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck"
            android:autofillHints="" />

        <TextView
            android:id="@+id/vechlab"
            android:layout_width="130dp"
            android:layout_below="@+id/vehicalno"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/vehical_type"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehicalno"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="55dp" />
        <TextView
            android:id="@+id/time_IN"
            android:layout_below="@+id/vechlab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/time_in"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:layout_below="@+id/vechlab"
            android:id="@+id/timein"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_toRightOf="@+id/time_IN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="150dp"
            android:hint="time in"
            android:inputType="text"
            android:maxLength="8"
            tools:ignore="TouchTargetSizeCheck"
            android:autofillHints="" />

        <TextView
            android:id="@+id/time_OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timein"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:text="Time Out:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/timeout"
            android:background="@drawable/custom1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timein"
            android:layout_marginStart="125dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="150dp"
            android:autofillHints=""
            android:hint="@string/time_out"
            android:inputType="text"
            android:maxLength="8"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/perSub"
            android:layout_marginTop="600dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="submit"/>

    </RelativeLayout>
</ScrollView>